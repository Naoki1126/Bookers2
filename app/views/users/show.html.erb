<div class="body">
	<div class="container">
		<p class="notice"><%= flash[:notice] %></p>
		<div class="row">
		    <div class="col-xs-3">
				<h2>User info</h2>
				<!--　↓設定した画像を表示-->
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpg',fallback: "no_image.jpg" %>
				<table class= "table">
					<tbody>
						<tr>
							<th>name</th>
							<th class="profile-name">
							<%= @user.name %>
							</th>
						</tr>
						<tr>
							<th>introduction</th>
							<th class="introduction">
							<%= @user.introduction %>
							</th>
							<th></th>
						</tr>
						<tr>
							<th>follows</th>
							<th>
								<%= link_to @user.followings.count, "/users/#{@user.id}/follows"%>
								</th>
						</tr>
						<tr>
							<th>followers</th>
							<th>
								<%= link_to @user.followers.count, "/users/#{@user.id}/followers" %>
							</th>
						</tr>
					</tbody>
				</table>
				<% unless current_user == @user %>
  					<% if current_user.following?(@user) %>
    				<%= form_for(current_user.relationships.find_by(follow_id: @user.id), html: { method: :delete }) do |f| %>
     				 <%= hidden_field_tag :follow_id, @user.id %>
    			     <%= f.submit 'Unfollow', class: "btn btn-danger btn-block" %>
   					 <% end %>
				   <% else %>
    			   <%= form_for(current_user.relationships.build) do |f| %>
   		           <%= hidden_field_tag :follow_id, @user.id %>
                   <%= f.submit 'Follow', class: "btn btn-primary btn-block" %>
   				   <% end %>
 				   <% end %>
 				<% end %>
					<span class="row">
						<% if @user.id == current_user.id %>
						<p><%= link_to "", edit_user_path(@user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_14097" %></p>
						<% end %>
					</span>
					<h2>New book</h2>
					<%= form_for(@book, url: '/books') do |f| %>

					<p>Title</p>
					<%= f.text_field :title %>

					<p>Body</p>
					<%= f.text_area :body %>
					<br>
					<%= f.submit 'Create Book' %>
					<% end %>
		   	</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
					<% @books.each do |book| %>
						<tr>
							<td class="user-image">
								<%= link_to user_path(@user)do %>
								<%= attachment_image_tag @user, :profile_image, size: '50x50', format:'jpg',fallback: "no_image.jpg" %>
								<% end %>
							</td>
							<td class="book-title">
								<%= link_to book.title, book_path(book) %></td>
							<td class="book-Opinion"><%=book.body %></td>
							 <td>
				    			<p>コメント数：
				    			<%= book.book_comments.count %>
				    			</p>
				    		</td>
						</tr>
                	<% end %>
               		 </tbody>
            	</table>
        	</div>
   		</div>
	</div>
</div>






