<div class="body">
	<div class="container">
		<p class="notice"><%= flash[:notice] %></p>
		<div class="row">
		    <div class="col-xs-3">
				<h2>User info</h2>
				<!--　↓設定した画像を表示-->
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpg',fallback: "no_image.jpg" %>
				<table class= "table">
					<tbody>
						<tr>
							<th>name</th>
							<th class="profile-name">
							<%= @user.name %>
							</th>
						</tr>
						<tr>
							<th>introduction</th>
							<th class="introduction">
							<%= @user.introduction %>
							</th>
							<th></th>
						</tr>
					</tbody>
				</table>
					<li class="row">
						<% if @user.id == current_user.id %>
						<p><%= link_to "", edit_user_path(@user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_14097" %></p>
						<% end %>
					</li>
					<h2>New book</h2>
					<%= form_for(@book, url: '/books') do |f| %>

					<p>Title</p>
					<%= f.text_field :title %>

					<p>Body</p>
					<%= f.text_area :body %>
					<br>
					<%= f.submit 'Create Book' %>

					<% end %>
		   	</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class=ç>
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
					<% @books.each do |book| %>
						<tr>
							<td class="user-image">
								<%= link_to user_path(@user)do %>
								<%= attachment_image_tag @user, :profile_image, size: '50x50', format:'jpg',fallback: "no_image.jpg" %>
								<% end %>
							</td>
							<td class="book-title">
								<%= link_to book.title, book_path(book) %></td>
							<td class="book-Opinion"><%=book.body %></td>
						</tr>
                	<% end %>
               		 </tbody>
            	</table>
        	</div>
   		</div>
	</div>
</div>






