<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>Users serch for"<%= @model %>"</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
				<%  if @model == 'user' %>
				  <tr>
				    <% @datas.each do |data| %>
					<td><%= attachment_image_tag data, :profile_image, size:'50x50', format:'jpg',fallback: "no_image.jpg" %></td>
					<td><%= data.name %></td>
 					<td>
 						<%= link_to 'Show', user_path(data) %>
 					</td>
 				  </tr>
 				   <% end %>
 			    <% else %>
 				   <tr>
					<% @datas.each do |data| %>
					<td><%= attachment_image_tag data.user, :profile_image, size:'50x50', format:'jpg',fallback: "no_image.jpg" %></td>
					<td><%= data.title %></td>
 					<td>
 						<%= link_to 'Show', book_path(data) %>
 					</td>
 				  </tr>
 				    <% end %>
 				<% end %>
 		     	</tbody>
 		     </table>
 		 </div>
 	</div>
</div>