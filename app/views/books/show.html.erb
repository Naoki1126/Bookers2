<div class=row>
<%= render 'users/profile', user:@user, book:@book%>
<p class="notice"><%= flash[:notice] %></p>

 <div class="body">
	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">

			
		  <tbody>
			
				<tr>
					<td><%= link_to user_path(@user)do %>
					<%= attachment_image_tag @user, :profile_image, size:'50x50', format:'jpg',fallback: "no_image.jpg" %>
				   <% end %>
				   <%= link_to @user.name, user_path(@user) %>

				    </td>
				    <td class=book_title>
				        <%= @books.title %>
				    </td>
				    <td class=book_opinion>
				    	<%= @books.body %>
				    </td>
				    <td>
					<% if @books.favorited_by?(current_user) %>
						<%= link_to book_favorites_path(@books), method: :delete do %>
						<i class="fa fa-heart" aria-hidden="true"></i>
						<%= @books.favorites.count %>
						<% end %>

					<% else %>

						<%= link_to book_favorites_path(@books),method: :post do %>
						<i class="fa fa-heart-o" aria-hidden="true"></i>
						<%= @books.favorites.count %>
						<% end %>


					</td>
					<% end %>
				    <td><p>コメント数：
				    		<%= @books.book_comments.count %>
				    	</p>
				    </td>
				    <% if @books.user_id == current_user.id %>
				    <td>
				    <%= link_to "Edit", edit_book_path(@books) %>
					</td>
					<td>
					<%= link_to "Destroy",book_path(@books), method: :delete %>
					</td> 
					<% end %>
				</tr>
		

			</tbody>
		</table>
		<br>
	    <table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>Comment</th>
					<th></th>
					<th>User name</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<% @books.book_comments.each do |book_comment| %>
					<td><%= book_comment.comment %></td>
					<td></td>
					<td><%= book_comment.user.name %></td>
					 <% if @books.user_id == current_user.id %>
					 <td>
					<%= link_to "Destroy",book_book_comments_path(@books), method: :delete %>
					</td> 
					<% end %>

				</tr>
					<% end %>
			</tbody>
		</table>
		<br>
		<%= form_for [@books,@book_comment] do |f| %>
		<%= f.text_area :comment, size: '100x10' %>
		<%= f.submit '送信する' %>

		<% end %>
	</div>
  </div>
</div>

