<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    t="width=device-width,initial-scale=1.0">
   <script src="https://kit.fontawesome.com/cda710863c.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
        <h4>Bookers</h4>
        </nav>

      <% if user_signed_in? %>
        <nav>
          <ul class="nav navbar-nav navbar-right">

            <li class=""><%= link_to " Home", user_path(current_user),class:"glyphicon glyphicon-home home" %></li>
            <li class=""><%= link_to " Users", users_path,class:"glyphicon glyphicon-user users" %></li>
            <li class=""><%= link_to " Books", books_path,class:"glyphicon glyphicon-book books" %></li>
            <li class="glyphicon glyphicon-loguot logput"><%= link_to " logout", destroy_user_session_path,method: :delete,class:"glyphicon glyphicon-log-out" %></li>
          </ul>
        </nav>
      <% else %>
        <nav> 
          <ul class="nav navbar-nav navbar-right">
            <li class=""><%= link_to " Home", root_path,class:"glyphicon glyphicon-home home" %></li>
            <li class=""><%= link_to " about", home_about_path, class:"glyphicon glyphicon-link about" %></li>
            <li class=""><%= link_to " sign up", new_user_registration_path,class:"glyphicon glyphicon-edit sign_up" %></li>
            <li class=""><%= link_to " login", new_user_session_path,class:"glyphicon glyphicon-log-in sign_in" %></li>
          </ul>
         </nav>
       <% end %>
       <br>
      </div>
    </header>
    <br><br>
    <br>
    <% if user_signed_in? %>
    <div class= "search-form">
      <%= form_tag(search_path,:method =>'get') do %>
      <%= text_field_tag 'search[content]' %>
      <%= select_tag 'search[model]',options_for_select({"User" => "user","Book" => "book"})%>
      <%= select_tag 'search[how]',options_for_select({"完全一致" => "match","前方一致" => "forward","後方一致" => "backward","部分一致" => "partical"}) %>
      <%= submit_tag '検索', class:"btn btn-primary" %>
      <% end %>
      <% end %>
      </div>
    <br>
    <br>


    <%= yield %>
  </body>
</html>
